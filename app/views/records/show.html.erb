<div data-role="page" id="record_detail<%= @record.Id %>" data-add-back-btn="true">
    <div data-role="header">
        <h1><%= @record.Name %></h1>
    </div>
    <div class="ui-grid-a">
        <% @record.attributes.each do |k, v| %>
            <div data-role="collapsible" data-collapsed="false">
                <h3><%=k%></h3>
                <p><%= v %></p>
            </div>
        <% end %>
    </div>
</div>